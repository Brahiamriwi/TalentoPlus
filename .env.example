# =====================================================
# TalentoPlus - Environment Variables Configuration
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# -----------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=TalentoPlusDb

# -----------------------------------------------------
# OpenAI Configuration (for AI-powered HR assistant)
# -----------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here

# -----------------------------------------------------
# JWT Configuration (for API authentication)
# -----------------------------------------------------
# Must be at least 32 characters for security
JWT_KEY=your-super-secret-jwt-key-minimum-32-characters
JWT_ISSUER=TalentoPlusAPI
JWT_AUDIENCE=TalentoPlusUsers

# -----------------------------------------------------
# SMTP Configuration (for sending emails)
# -----------------------------------------------------
# Example using Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=TalentoPlus HR System
