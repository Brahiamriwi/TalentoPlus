@model TalentoPlus.Core.Entities.Employee
@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-trash me-2 text-danger"></i>Eliminar Empleado</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación</h5>
            </div>
            <div class="card-body text-center">
                <i class="bi bi-person-x text-danger" style="font-size: 4rem;"></i>
                <h4 class="mt-3">@Model.FirstName @Model.LastName</h4>
                <p class="text-muted">@Model.Position - @Model.Department?.Name</p>
                <p class="text-muted">@Model.Email</p>
                
                <div class="alert alert-warning mt-3">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>¿Está seguro de que desea eliminar este empleado?</strong><br/>
                    Esta acción no se puede deshacer.
                </div>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-lg me-1"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash me-1"></i>Sí, Eliminar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
