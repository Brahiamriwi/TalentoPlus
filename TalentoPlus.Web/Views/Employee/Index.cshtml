@model TalentoPlus.Web.Models.EmployeeIndexViewModel
@{
    ViewData["Title"] = "Empleados";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-lines-fill me-2"></i>Empleados</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Nuevo Empleado
        </a>
        <a asp-controller="Excel" asp-action="Import" class="btn btn-success">
            <i class="bi bi-file-earmark-excel me-1"></i>Importar Excel
        </a>
    </div>
</div>

<!-- Filtros de búsqueda -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label"><i class="bi bi-search me-1"></i>Buscar</label>
                    <input type="text" name="searchTerm" class="form-control" 
                           placeholder="Nombre, email, cargo o departamento..." 
                           value="@Model.SearchTerm" />
                </div>
                <div class="col-md-3">
                    <label class="form-label"><i class="bi bi-building me-1"></i>Departamento</label>
                    <select name="departmentId" class="form-select">
                        <option value="">Todos los departamentos</option>
                        @foreach (var dept in Model.Departments)
                        {
                            <option value="@dept.Id" selected="@(Model.DepartmentId == dept.Id)">@dept.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label"><i class="bi bi-flag me-1"></i>Estado</label>
                    <select name="status" class="form-select">
                        <option value="">Todos</option>
                        <option value="@TalentoPlus.Core.Enums.EmployeeStatus.Active" selected="@(Model.Status == TalentoPlus.Core.Enums.EmployeeStatus.Active)">Activo</option>
                        <option value="@TalentoPlus.Core.Enums.EmployeeStatus.OnVacation" selected="@(Model.Status == TalentoPlus.Core.Enums.EmployeeStatus.OnVacation)">Vacaciones</option>
                        <option value="@TalentoPlus.Core.Enums.EmployeeStatus.Inactive" selected="@(Model.Status == TalentoPlus.Core.Enums.EmployeeStatus.Inactive)">Inactivo</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel me-1"></i>Filtrar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Limpiar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Información de resultados -->
@if (Model.TotalItems > 0)
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">
            Mostrando @((Model.CurrentPage - 1) * Model.PageSize + 1)-@Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems) de @Model.TotalItems empleados
        </span>
        <div>
            <label class="me-2">Mostrar:</label>
            <select id="pageSizeSelector" class="form-select form-select-sm d-inline-block" style="width: auto;">
                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                <option value="25" selected="@(Model.PageSize == 25)">25</option>
                <option value="50" selected="@(Model.PageSize == 50)">50</option>
                <option value="100" selected="@(Model.PageSize == 100)">100</option>
            </select>
        </div>
    </div>
}

<div class="card shadow">
    <div class="card-body">
        @if (Model.Employees.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Cargo</th>
                            <th>Departamento</th>
                            <th>Estado</th>
                            <th>Salario</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <tr>
                                <td>
                                    <strong>@employee.FirstName @employee.LastName</strong>
                                </td>
                                <td>@employee.Email</td>
                                <td>@employee.Position</td>
                                <td>
                                    <span class="badge bg-info">@employee.Department?.Name</span>
                                </td>
                                <td>
                                    @{
                                        var statusClass = employee.Status switch
                                        {
                                            TalentoPlus.Core.Enums.EmployeeStatus.Active => "bg-success",
                                            TalentoPlus.Core.Enums.EmployeeStatus.OnVacation => "bg-warning text-dark",
                                            TalentoPlus.Core.Enums.EmployeeStatus.Inactive => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                        var statusText = employee.Status switch
                                        {
                                            TalentoPlus.Core.Enums.EmployeeStatus.Active => "Activo",
                                            TalentoPlus.Core.Enums.EmployeeStatus.OnVacation => "Vacaciones",
                                            TalentoPlus.Core.Enums.EmployeeStatus.Inactive => "Inactivo",
                                            _ => employee.Status.ToString()
                                        };
                                    }
                                    <span class="badge @statusClass">@statusText</span>
                                </td>
                                <td>$@employee.Salary.ToString("N0")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="DownloadResume" asp-route-id="@employee.Id" class="btn btn-outline-success" title="Descargar PDF">
                                            <i class="bi bi-file-pdf"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Navegación de páginas" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-departmentId="@Model.DepartmentId"
                               asp-route-status="@Model.Status"
                               asp-route-page="@(Model.CurrentPage - 1)"
                               asp-route-pageSize="@Model.PageSize">
                                <i class="bi bi-chevron-left"></i> Anterior
                            </a>
                        </li>
                        
                        @{
                            var startPage = Math.Max(1, Model.CurrentPage - 2);
                            var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                            
                            if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-departmentId="@Model.DepartmentId"
                                       asp-route-status="@Model.Status"
                                       asp-route-page="1"
                                       asp-route-pageSize="@Model.PageSize">1</a>
                                </li>
                                if (startPage > 2)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                            }
                            
                            for (var i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-departmentId="@Model.DepartmentId"
                                       asp-route-status="@Model.Status"
                                       asp-route-page="@i"
                                       asp-route-pageSize="@Model.PageSize">@i</a>
                                </li>
                            }
                            
                            if (endPage < Model.TotalPages)
                            {
                                if (endPage < Model.TotalPages - 1)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-departmentId="@Model.DepartmentId"
                                       asp-route-status="@Model.Status"
                                       asp-route-page="@Model.TotalPages"
                                       asp-route-pageSize="@Model.PageSize">@Model.TotalPages</a>
                                </li>
                            }
                        }
                        
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-departmentId="@Model.DepartmentId"
                               asp-route-status="@Model.Status"
                               asp-route-page="@(Model.CurrentPage + 1)"
                               asp-route-pageSize="@Model.PageSize">
                                Siguiente <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.DepartmentId.HasValue || Model.Status.HasValue)
                {
                    <h4 class="mt-3 text-muted">No se encontraron empleados con los filtros aplicados</h4>
                    <p class="text-muted">Intenta modificar los criterios de búsqueda.</p>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-x-circle me-1"></i>Limpiar filtros
                    </a>
                }
                else
                {
                    <h4 class="mt-3 text-muted">No hay empleados registrados</h4>
                    <p class="text-muted">Comienza agregando un nuevo empleado o importando desde Excel.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>Agregar Empleado
                    </a>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('pageSizeSelector')?.addEventListener('change', function() {
            const url = new URL(window.location.href);
            url.searchParams.set('pageSize', this.value);
            url.searchParams.set('page', '1');
            window.location.href = url.toString();
        });
    </script>
}
