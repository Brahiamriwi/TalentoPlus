@model IEnumerable<TalentoPlus.Core.Entities.Employee>
@{
    ViewData["Title"] = "Empleados";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-lines-fill me-2"></i>Empleados</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Nuevo Empleado
        </a>
        <a asp-controller="Excel" asp-action="Import" class="btn btn-success">
            <i class="bi bi-file-earmark-excel me-1"></i>Importar Excel
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Cargo</th>
                            <th>Departamento</th>
                            <th>Estado</th>
                            <th>Salario</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@employee.FirstName @employee.LastName</strong>
                                </td>
                                <td>@employee.Email</td>
                                <td>@employee.Position</td>
                                <td>
                                    <span class="badge bg-info">@employee.Department?.Name</span>
                                </td>
                                <td>
                                    @{
                                        var statusClass = employee.Status switch
                                        {
                                            TalentoPlus.Core.Enums.EmployeeStatus.Active => "bg-success",
                                            TalentoPlus.Core.Enums.EmployeeStatus.OnVacation => "bg-warning text-dark",
                                            TalentoPlus.Core.Enums.EmployeeStatus.Inactive => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                        var statusText = employee.Status switch
                                        {
                                            TalentoPlus.Core.Enums.EmployeeStatus.Active => "Activo",
                                            TalentoPlus.Core.Enums.EmployeeStatus.OnVacation => "Vacaciones",
                                            TalentoPlus.Core.Enums.EmployeeStatus.Inactive => "Inactivo",
                                            _ => employee.Status.ToString()
                                        };
                                    }
                                    <span class="badge @statusClass">@statusText</span>
                                </td>
                                <td>$@employee.Salary.ToString("N0")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="DownloadResume" asp-route-id="@employee.Id" class="btn btn-outline-success" title="Descargar PDF">
                                            <i class="bi bi-file-pdf"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 text-muted">No hay empleados registrados</h4>
                <p class="text-muted">Comienza agregando un nuevo empleado o importando desde Excel.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i>Agregar Empleado
                </a>
            </div>
        }
    </div>
</div>
