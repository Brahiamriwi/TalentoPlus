@model TalentoPlus.Core.Entities.Employee
@{
    ViewData["Title"] = "Nuevo Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-plus me-2"></i>Nuevo Empleado</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3"><i class="bi bi-person me-2"></i>Información Personal</h5>
                    
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">Nombres *</label>
                        <input asp-for="FirstName" class="form-control" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Apellidos *</label>
                        <input asp-for="LastName" class="form-control" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label">Fecha de Nacimiento *</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" required />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email *</label>
                        <input asp-for="Email" type="email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Teléfono</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Dirección</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="EducationLevel" class="form-label">Nivel Educativo *</label>
                        <select asp-for="EducationLevel" asp-items="ViewBag.EducationLevelList" class="form-select" required>
                            <option value="">Seleccione...</option>
                        </select>
                        <span asp-validation-for="EducationLevel" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <h5 class="text-success mb-3"><i class="bi bi-briefcase me-2"></i>Información Laboral</h5>
                    
                    <div class="mb-3">
                        <label asp-for="Position" class="form-label">Cargo *</label>
                        <input asp-for="Position" class="form-control" required />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DepartmentId" class="form-label">Departamento *</label>
                        <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-select" required>
                            <option value="">Seleccione...</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Salary" class="form-label">Salario *</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Salary" type="number" step="0.01" class="form-control" required />
                        </div>
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="HireDate" class="form-label">Fecha de Ingreso *</label>
                        <input asp-for="HireDate" type="date" class="form-control" required />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Estado *</label>
                        <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-select" required>
                            <option value="">Seleccione...</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ProfessionalProfile" class="form-label">Perfil Profesional</label>
                        <textarea asp-for="ProfessionalProfile" class="form-control" rows="4" 
                                  placeholder="Describa la experiencia y habilidades del empleado..."></textarea>
                        <span asp-validation-for="ProfessionalProfile" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <hr />
            
            <div class="text-end">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="bi bi-x-lg me-1"></i>Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i>Guardar Empleado
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
