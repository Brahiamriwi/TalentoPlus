@model TalentoPlus.Core.Entities.Employee
@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-pencil-square me-2"></i>Editar Empleado</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3"><i class="bi bi-person me-2"></i>Información Personal</h5>
                    
                    <div class="mb-3">
                        <label asp-for="Document" class="form-label">Documento de Identidad *</label>
                        <input asp-for="Document" class="form-control" required />
                        <span asp-validation-for="Document" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">Nombres *</label>
                        <input asp-for="FirstName" class="form-control" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Apellidos *</label>
                        <input asp-for="LastName" class="form-control" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label">Fecha de Nacimiento *</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" id="dateOfBirth" required />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        <div id="dateOfBirthError" class="text-danger" style="display:none;">
                            El empleado debe tener al menos 18 años de edad.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email *</label>
                        <input asp-for="Email" type="email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Teléfono</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Dirección</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="EducationLevel" class="form-label">Nivel Educativo *</label>
                        <select asp-for="EducationLevel" asp-items="ViewBag.EducationLevelList" class="form-select" required>
                            <option value="">Seleccione...</option>
                        </select>
                        <span asp-validation-for="EducationLevel" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <h5 class="text-success mb-3"><i class="bi bi-briefcase me-2"></i>Información Laboral</h5>
                    
                    <div class="mb-3">
                        <label asp-for="Position" class="form-label">Cargo *</label>
                        <input asp-for="Position" class="form-control" required />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DepartmentId" class="form-label">Departamento *</label>
                        <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-select" required>
                            <option value="">Seleccione...</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Salary" class="form-label">Salario *</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Salary" type="number" step="0.01" class="form-control" required />
                        </div>
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="HireDate" class="form-label">Fecha de Ingreso *</label>
                        <input asp-for="HireDate" type="date" class="form-control" id="hireDate" required />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                        <div id="hireDateError" class="text-danger" style="display:none;">
                            La fecha de ingreso no puede ser una fecha futura.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Estado *</label>
                        <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-select" required>
                            <option value="">Seleccione...</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ProfessionalProfile" class="form-label">Perfil Profesional <small class="text-muted">(máx. 100 caracteres)</small></label>
                        <textarea asp-for="ProfessionalProfile" class="form-control" rows="4" maxlength="100" id="professionalProfile"></textarea>
                        <div class="form-text"><span id="charCount">0</span>/100 caracteres</div>
                        <span asp-validation-for="ProfessionalProfile" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <hr />
            
            <div class="text-end">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="bi bi-x-lg me-1"></i>Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i>Actualizar Empleado
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            const todayStr = today.toISOString().split('T')[0];
            
            const dateOfBirthInput = document.getElementById('dateOfBirth');
            const hireDateInput = document.getElementById('hireDate');
            const professionalProfileInput = document.getElementById('professionalProfile');
            const charCountSpan = document.getElementById('charCount');
            const form = document.querySelector('form');

            // Calculate max date of birth (must be at least 18 years old)
            const maxDateOfBirth = new Date();
            maxDateOfBirth.setFullYear(maxDateOfBirth.getFullYear() - 18);
            const maxDateOfBirthStr = maxDateOfBirth.toISOString().split('T')[0];

            // Initialize character counter
            charCountSpan.textContent = professionalProfileInput.value.length;

            // Character counter for professional profile
            professionalProfileInput.addEventListener('input', function() {
                charCountSpan.textContent = this.value.length;
            });

            // Real-time validation for date of birth
            dateOfBirthInput.addEventListener('change', function() {
                const dateOfBirthError = document.getElementById('dateOfBirthError');
                if (this.value && this.value > maxDateOfBirthStr) {
                    dateOfBirthError.style.display = 'block';
                    this.classList.add('is-invalid');
                } else {
                    dateOfBirthError.style.display = 'none';
                    this.classList.remove('is-invalid');
                }
            });

            // Real-time validation for hire date
            hireDateInput.addEventListener('change', function() {
                const hireDateError = document.getElementById('hireDateError');
                if (this.value && this.value > todayStr) {
                    hireDateError.style.display = 'block';
                    this.classList.add('is-invalid');
                } else {
                    hireDateError.style.display = 'none';
                    this.classList.remove('is-invalid');
                }
            });

            // Form validation on submit
            form.addEventListener('submit', function(e) {
                let isValid = true;
                const dateOfBirthError = document.getElementById('dateOfBirthError');
                const hireDateError = document.getElementById('hireDateError');

                // Validate date of birth (18+ years)
                if (dateOfBirthInput.value > maxDateOfBirthStr) {
                    dateOfBirthError.style.display = 'block';
                    dateOfBirthInput.classList.add('is-invalid');
                    isValid = false;
                } else {
                    dateOfBirthError.style.display = 'none';
                    dateOfBirthInput.classList.remove('is-invalid');
                }

                // Validate hire date (not in future)
                if (hireDateInput.value > todayStr) {
                    hireDateError.style.display = 'block';
                    hireDateInput.classList.add('is-invalid');
                    isValid = false;
                } else {
                    hireDateError.style.display = 'none';
                    hireDateInput.classList.remove('is-invalid');
                }

                if (!isValid) {
                    e.preventDefault();
                    e.stopPropagation();
                }
            });
        });
    </script>
}
