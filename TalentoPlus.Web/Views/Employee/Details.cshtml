@model TalentoPlus.Core.Entities.Employee
@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-badge me-2"></i>Detalles del Empleado</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil me-1"></i>Editar
        </a>
        <a asp-action="DownloadResume" asp-route-id="@Model.Id" class="btn btn-success">
            <i class="bi bi-file-pdf me-1"></i>Descargar PDF
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-person me-2"></i>Información Personal</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Nombre Completo:</strong><br/>@Model.FirstName @Model.LastName</p>
                        <p><strong>Fecha de Nacimiento:</strong><br/>@Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
                        <p><strong>Nivel Educativo:</strong><br/>
                            @{
                                var educationText = Model.EducationLevel switch
                                {
                                    TalentoPlus.Core.Enums.EducationLevel.HighSchool => "Bachiller",
                                    TalentoPlus.Core.Enums.EducationLevel.Technical => "Técnico",
                                    TalentoPlus.Core.Enums.EducationLevel.Technologist => "Tecnólogo",
                                    TalentoPlus.Core.Enums.EducationLevel.Bachelor => "Profesional",
                                    TalentoPlus.Core.Enums.EducationLevel.Specialization => "Especialización",
                                    TalentoPlus.Core.Enums.EducationLevel.Master => "Maestría",
                                    TalentoPlus.Core.Enums.EducationLevel.Doctorate => "Doctorado",
                                    _ => Model.EducationLevel.ToString()
                                };
                            }
                            @educationText
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Email:</strong><br/>@Model.Email</p>
                        <p><strong>Teléfono:</strong><br/>@Model.Phone</p>
                        <p><strong>Dirección:</strong><br/>@Model.Address</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-briefcase me-2"></i>Información Laboral</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Cargo:</strong><br/>@Model.Position</p>
                        <p><strong>Departamento:</strong><br/>
                            <span class="badge bg-info">@Model.Department?.Name</span>
                        </p>
                        <p><strong>Fecha de Ingreso:</strong><br/>@Model.HireDate.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Salario:</strong><br/>
                            <span class="fs-4 text-success fw-bold">$@Model.Salary.ToString("N0")</span>
                        </p>
                        <p><strong>Estado:</strong><br/>
                            @{
                                var statusClass = Model.Status switch
                                {
                                    TalentoPlus.Core.Enums.EmployeeStatus.Active => "bg-success",
                                    TalentoPlus.Core.Enums.EmployeeStatus.OnVacation => "bg-warning text-dark",
                                    TalentoPlus.Core.Enums.EmployeeStatus.Inactive => "bg-secondary",
                                    _ => "bg-secondary"
                                };
                                var statusText = Model.Status switch
                                {
                                    TalentoPlus.Core.Enums.EmployeeStatus.Active => "Activo",
                                    TalentoPlus.Core.Enums.EmployeeStatus.OnVacation => "En Vacaciones",
                                    TalentoPlus.Core.Enums.EmployeeStatus.Inactive => "Inactivo",
                                    _ => Model.Status.ToString()
                                };
                            }
                            <span class="badge @statusClass fs-6">@statusText</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.ProfessionalProfile))
        {
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-file-person me-2"></i>Perfil Profesional</h5>
                </div>
                <div class="card-body">
                    <p>@Model.ProfessionalProfile</p>
                </div>
            </div>
        }
    </div>
</div>
